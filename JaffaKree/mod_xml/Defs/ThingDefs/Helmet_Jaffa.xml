<ThingDefs>

  <!-- ABSTRACT -->
  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <eType>Apparel</eType>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useStandardHealth>True</useStandardHealth>
    <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    <statBases>
      <MaxHealth>100</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <tradersCarry>true</tradersCarry>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>


	<!-- REAL --> 

   <ThingDef ParentName="ApparelBase">
   <defName>Jaffa_SnakeHelmet</defName>
    <label>Serpent Guard Helmet</label>
    <description>This Snake-shaped helmet is worn by the Serpent Guards lead by the Goa'uld Apophis.</description>
    <graphicPath>Helmet/Jaffa_Helmet</graphicPath>
	<graphicClass>Graphic_Single</graphicClass>
    <statBases>
      <MarketValue>300</MarketValue>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
      <ArmorRating_Heat>0.35</ArmorRating_Heat>
      <ArmorRating_Electric>0</ArmorRating_Electric>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
      <ComfyTemperatureMax>20</ComfyTemperatureMax>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <worngraphicPath>Helmet/Jaffa_Helmet</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>100</commonality>
      <tags>
        <li>JaffaWarSnakeHelmet</li>
      </tags>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
      <options>
		<li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

  
